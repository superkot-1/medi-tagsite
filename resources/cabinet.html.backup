    <script src="main.js"></script>
    <script>
        // Cabinet-specific JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            initializeCabinet();
        });

        function initializeCabinet() {
            initializeTabNavigation();
            initializeQRModal();
            initializeAutoSave();
            initializeFormHandlers();
        }

        function initializeTabNavigation() {
            const tabs = document.querySelectorAll('.sidebar-tab');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabName = tab.dataset.tab;
                    
                    // Update active tab
                    tabs.forEach(t => {
                        t.classList.remove('sidebar-active', 'text-white');
                        t.classList.add('text-gray-700', 'hover:bg-gray-100');
                    });
                    tab.classList.add('sidebar-active', 'text-white');
                    tab.classList.remove('text-gray-700', 'hover:bg-gray-100');
                    
                    // Show corresponding content
                    contents.forEach(content => {
                        content.classList.add('hidden');
                    });
                    document.getElementById(tabName + '-tab').classList.remove('hidden');
                    
                    // Animate content
                    anime({
                        targets: `#${tabName}-tab`,
                        opacity: [0, 1],
                        translateY: [20, 0],
                        duration: 400,
                        easing: 'easeOutQuart'
                    });
                });
            });
        }

        function initializeQRModal() {
            const generateQRBtn = document.getElementById('generateQRBtn');
            const generateQRBtn2 = document.getElementById('generateQRBtn2');
            const qrModal = document.getElementById('qrModal');
            const closeQRModal = document.getElementById('closeQRModal');

            [generateQRBtn, generateQRBtn2].forEach(btn => {
                if (btn) {
                    btn.addEventListener('click', () => {
                        qrModal.classList.remove('hidden');
                        anime({
                            targets: qrModal.querySelector('.bg-white'),
                            scale: [0.8, 1],
                            opacity: [0, 1],
                            duration: 300,
                            easing: 'easeOutQuart'
                        });
                    });
                }
            });

            if (closeQRModal) {
                closeQRModal.addEventListener('click', () => {
                    qrModal.classList.add('hidden');
                });
            }
        }

        function initializeAutoSave() {
            const forms = ['profileForm'];
            
            forms.forEach(formId => {
                const form = document.getElementById(formId);
                if (form) {
                    let saveTimeout;
                    form.addEventListener('input', () => {
                        clearTimeout(saveTimeout);
                        saveTimeout = setTimeout(() => {
                            // Simulate auto-save
                            const indicator = document.querySelector('.auto-save-indicator');
                            indicator.style.backgroundColor = '#10b981';
                            setTimeout(() => {
                                indicator.style.backgroundColor = '#059669';
                            }, 1000);
                        }, 2000);
                    });
                }
            });
        }

        function initializeFormHandlers() {
            const profileForm = document.getElementById('profileForm');
            if (profileForm) {
                profileForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    window.MediTag.showNotification('Profile updated successfully!', 'success');
                });
            }
        }
    </script>
